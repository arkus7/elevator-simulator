FROM node:24-alpine AS builder

WORKDIR /app

COPY package*.json ./

RUN npm ci
COPY . .
RUN npm run build

FROM node:24-alpine

WORKDIR /app

RUN apk add --no-cache curl

COPY package*.json ./
RUN npm ci --only=production
COPY --from=builder /app/dist ./dist

EXPOSE 3000
CMD ["node", "dist/main.js"]

